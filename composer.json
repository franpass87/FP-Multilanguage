{
    "name": "francescopasseri/fp-multilanguage",
    "description": "Automates Italian-to-English copies of content, taxonomies, menus, media, and SEO data with queue-based routing and trusted translation providers.",
    "type": "wordpress-plugin",
    "require": {
        "php": ">=8.0"
    },
    "autoload": {
        "classmap": [
            "fp-multilanguage"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.11",
        "friendsofphp/php-cs-fixer": "^3.58",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "config": {
        "platform": {
            "php": "8.2.0"
        },
        "optimize-autoloader": true,
        "sort-packages": true,
        "vendor-dir": "fp-multilanguage/vendor"
    },
    "scripts": {
        "build": [
            "rm -rf fp-multilanguage/vendor",
            "@composer install --no-dev --prefer-dist --no-interaction --optimize-autoloader",
            "composer dump-autoload -o --classmap-authoritative"
        ],
        "sync:author": [
            "@php tools/sync-author-metadata.php --apply=${APPLY:-false}"
        ],
        "sync:docs": [
            "@php tools/sync-author-metadata.php --docs --apply=${APPLY:-false}"
        ],
        "changelog:from-git": [
            "npm run changelog:from-git"
        ]
    },
    "homepage": "https://francescopasseri.com",
    "support": {
        "issues": "https://github.com/francescopasseri/FP-Multilanguage/issues",
        "source": "https://github.com/francescopasseri/FP-Multilanguage"
    },
    "authors": [
        {
            "name": "Francesco Passeri",
            "email": "info@francescopasseri.com",
            "homepage": "https://francescopasseri.com",
            "role": "Developer"
        }
    ]
}
